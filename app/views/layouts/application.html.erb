<!DOCTYPE html>
<html>
<head>
  <title>Synergy Solutions - Make Synergy Yours</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header id="top">
		<!--Canvas under construction-->
		<div id="searchbar">
			<%= form_tag(search_results_path) do %>
  				<%= text_field_tag(:keywords) %>
  				<%= submit_tag("Search") %>
			<% end %>
		</div>
		<div id="hoverpicture">
			<canvas id="canvas" width="885" height="171"></canvas>
		</div>
	</header>
	<section id="midNav">
		<nav>
			<ul>
				<li><%= link_to 'Home', root_path %></li>
				<li><%= link_to 'Investments', investments_path %></li>
				<li><%= link_to 'Insurance', insurance_path %></li>
				<li><%= link_to 'Mortgages', mortgages_path %></li>
				<li><%= link_to 'Home Equity', homeequity_path %></li>
				<li><%= link_to 'Auto Finance', autofinance_path %></li>
				<li><%= link_to 'Real Estate', realestate_path %></li>
				<li><%= link_to 'Debt Consolidation', debtconsolidation_path %></li>
				<li><%= link_to 'Join our Team', join_us_path %></li>
				<li><%= link_to 'Contact Us', contact_us_path %></li>
			</ul>
		</nav>
	</section>
	<div id="container">
	<%= yield %>
	</div>
	<section id="bottomInfo">
		<footer>
			<nav id="bottomNav">
				<ul>
					<li><%= link_to 'Home', root_path %></li>
					<li><%= link_to 'Login', 'admin/login' %></li>
					<li><%= link_to 'About Us', about_us_path %></li>
				</ul>
			</nav>
			<p>&copy; Copyright Synergy Solutions. Designed by Synergy Solutions</p>
		</footer>
	</section>
</body>
</html>
